{
    "name": "pinekta/php-jp-customer-barcode-generator",
    "description": "This library 'php-jp-customer-barcode-generator' is an easy to use, framework independent, Japan post's customer barcode generator in PHP.",
    "type": "library",
    "keywords": ["barcode", "barcode generator","japan","post","customer barcode","php","tools"],
    "license": "MIT",
    "authors": [
        {
            "name": "pinekta",
            "email": "h03a081b@gmail.com",
            "homepage": "https://blog.pinekta.tech"
        }
    ],
    "require": {
        "php": "^5.4 || ^7.0",
        "php-coveralls/php-coveralls": "^1.1 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8 || ^6.5 || ^7.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Pinekta\\JPCustomerBarcode\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit"
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit -c phpunit.xml"
        ],
        "phpcs": [
            "./vendor/bin/phpcs --standard=PSR2 ./src",
            "./vendor/bin/phpcs --standard=PSR2 ./tests"
        ]
    }
}
